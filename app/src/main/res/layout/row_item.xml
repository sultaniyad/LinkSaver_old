<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="33dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/is_important_img"

        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"

        />

    <TextView

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"

        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65999997"
        android:text="Resident Evil NEW GAME 'Mercenaries: Ultimate Collection' Startup and character selectResident Evil NEW GAME 'Mercenaries: Ultimate Collection' Startup and character selectResident Evil NEW GAME 'Mercenaries: Ultimate Collection' Startup and character selectResident Evil NEW GAME 'Mercenaries: Ultimate Collection' Startup and character selectResident Evil NEW GAME 'Mercenaries: Ultimate Collection' Startup and character selectResident Evil NEW GAME 'Mercenaries: Ultimate Collection' Startup and character select"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.05" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/ic_open_in_browser_black_24dp"
        android:id="@+id/open_link_img"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintVertical_bias="0.57" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_begin="60dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="60dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="324dp"
        app:layout_constraintGuide_end="60dp" />


</android.support.constraint.ConstraintLayout>